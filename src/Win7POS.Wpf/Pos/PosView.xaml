<UserControl x:Class="Win7POS.Wpf.Pos.PosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             PreviewKeyDown="OnViewPreviewKeyDown"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1100">
    <UserControl.Resources>
        <Style x:Key="CartRowStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Sinistra: carrello lista a righe -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#EEE" Padding="8,6" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Prodotto" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Q.tà" FontWeight="SemiBold" VerticalAlignment="Center" Width="80" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="Prezzo" FontWeight="SemiBold" VerticalAlignment="Center" Width="90" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="3" Text="Totale" FontWeight="SemiBold" VerticalAlignment="Center" Width="90" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="4" Width="32"/>
                </Grid>
            </Border>
            <ListBox Grid.Row="1" ItemsSource="{Binding CartItems}" SelectedItem="{Binding SelectedCartItem}"
                     AlternationCount="2" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource CartRowStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource Self}}" Value="1">
                                <Setter Property="Background" Value="#F5F0F8"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Barcode}" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Width="80" HorizontalAlignment="Center">
                                <Button Width="28" Height="28" Content="−" FontSize="14" Padding="0"
                                        Command="{Binding DataContext.DecreaseQtyForLineCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                                <TextBlock Text="{Binding Quantity}" VerticalAlignment="Center" Margin="8,0" MinWidth="24" TextAlignment="Center"/>
                                <Button Width="28" Height="28" Content="+" FontSize="14" Padding="0"
                                        Command="{Binding DataContext.IncreaseQtyForLineCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="{Binding UnitPriceDisplay}" VerticalAlignment="Center" Width="90" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="3" Text="{Binding LineTotalDisplay}" FontWeight="SemiBold" VerticalAlignment="Center" Width="90" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <Button Grid.Column="4" Width="28" Height="28" Content="✕" FontSize="12" Padding="0" Foreground="DarkRed"
                                    Command="{Binding DataContext.RemoveLineForLineCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Destra: Inserimento / Scanner (solo BarcodeBox + Sconto + Add) -->
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="#CCC" BorderThickness="1" Padding="10" Background="#F8F8F8">
            <StackPanel>
                <TextBlock Text="Inserimento / Scanner" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock Text="Codice a barre" FontSize="11" Foreground="Gray" Margin="0,0,0,4"/>
                <TextBox x:Name="BarcodeBox"
                         MinHeight="36"
                         Margin="0,0,0,12"
                         Text="{Binding BarcodeInput, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding AddBarcodeCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <Button MinWidth="100" Margin="0,0,0,8" Content="Add" Command="{Binding AddBarcodeCommand}"/>
                <Button MinWidth="100" Content="Sconto" IsEnabled="False" Opacity="0.7" ToolTip="Placeholder"/>
            </StackPanel>
        </Border>

        <!-- Basso: Svuota + Articoli: N + Totale grande + Paga -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0" Background="#5C3D7A" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Svuota" Command="{Binding ClearCartCommand}"
                        MinWidth="80" Height="40" Foreground="White" Background="#7B5A8E" BorderThickness="0"/>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Foreground="White" Margin="16,0,0,0"
                           Text="{Binding ItemsCount, StringFormat=Articoli: {0}}"/>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,16,0">
                    <TextBlock VerticalAlignment="Center" Foreground="White" FontSize="14" Margin="0,0,8,0" Text="Totale spesa"/>
                    <TextBlock VerticalAlignment="Center" Foreground="White" FontSize="22" FontWeight="Bold"
                               Text="{Binding TotalDisplay}"/>
                </StackPanel>
                <Button Grid.Column="3" Grid.ColumnSpan="2" MinWidth="160" Height="44" FontSize="15" FontWeight="SemiBold"
                        Content="Paga" Command="{Binding PayCommand}"
                        Background="#9B7BAD" Foreground="White" BorderThickness="0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
