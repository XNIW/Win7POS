<UserControl x:Class="Win7POS.Wpf.Pos.PosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             PreviewKeyDown="OnViewPreviewKeyDown"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1100">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- Sinistra (grande): carrello + ultime vendite -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                <Button MinWidth="70" Margin="0,0,8,0" Content="Qty +" Command="{Binding IncreaseQtyCommand}"/>
                <Button MinWidth="70" Margin="0,0,8,0" Content="Qty -" Command="{Binding DecreaseQtyCommand}"/>
                <Button MinWidth="90" Content="Remove line" Command="{Binding RemoveLineCommand}"/>
            </StackPanel>
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding CartItems}"
                      SelectedItem="{Binding SelectedCartItem}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice}" Width="100"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding LineTotal}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Grid.Row="2" Margin="0,6,0,4" Foreground="DimGray" Text="{Binding StatusMessage}"/>

            <GroupBox Grid.Row="3" Header="Ultime vendite" Margin="0,4,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0"
                              ItemsSource="{Binding RecentSales}"
                              SelectedItem="{Binding SelectedRecentSale}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="SaleNo" Binding="{Binding SaleCode}" Width="*"/>
                            <DataGridTextColumn Header="Kind" Binding="{Binding KindText}" Width="60"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding TimeText}" Width="*"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="60"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                        <Button MinWidth="80" Margin="0,0,6,0" Content="Reload" Command="{Binding LoadRecentSalesCommand}"/>
                        <Button MinWidth="90" Margin="0,0,6,0" Content="Reso" Command="{Binding RefundCommand}"/>
                        <Button MinWidth="100" Margin="0,0,6,0" Content="Stampa" Command="{Binding PrintSelectedReceiptCommand}"/>
                        <Button MinWidth="100" Content="Preview" Command="{Binding ReprintPreviewCommand}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Destra: BarcodeBox + bottoni rapidi -->
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="#CCC" BorderThickness="1" Padding="8" Background="#F8F8F8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Inserimento / Scanner" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <TextBox x:Name="BarcodeBox"
                         Grid.Row="1"
                         MinHeight="32"
                         Margin="0,0,0,8"
                         Text="{Binding BarcodeInput, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding AddBarcodeCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                    <Button MinWidth="80" Margin="0,0,8,0" Content="Add" Command="{Binding AddBarcodeCommand}"/>
                    <Button MinWidth="80" Content="Receipt preview" Command="{Binding ReceiptPreviewCommand}"/>
                </StackPanel>
                <StackPanel Grid.Row="3" VerticalAlignment="Top">
                    <CheckBox Margin="0,8,0,4" Content="Use 42 cols" IsChecked="{Binding UseReceipt42}"/>
                    <Button Margin="0,4,0,4" MinWidth="120" Content="Backup DB" Command="{Binding BackupDbCommand}"/>
                    <Button Margin="0,4,0,4" MinWidth="120" Content="Printer settings" Command="{Binding PrinterSettingsCommand}"/>
                    <Button Margin="0,4,0,4" MinWidth="120" Content="Stampa ultima" Command="{Binding PrintLastReceiptCommand}"/>
                    <GroupBox Header="Receipt Preview" Margin="0,12,0,0">
                        <TextBox Text="{Binding ReceiptPreview}"
                                 IsReadOnly="True"
                                 TextWrapping="NoWrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 Height="120"/>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Basso (full width): Totale grande + bottone Paga -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0" Background="#E8E8E8" Padding="12,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="DimGray"
                       Text="{Binding Subtotal, StringFormat=Subtotal: {0}}"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                <TextBlock VerticalAlignment="Center" FontSize="20" FontWeight="Bold"
                           Text="{Binding Total, StringFormat=Total: {0}}"/>
            </StackPanel>
            <Button Grid.Column="2" MinWidth="140" Height="44" FontSize="14" FontWeight="SemiBold"
                    Content="Pay" Command="{Binding PayCommand}"/>
        </Grid>
    </Grid>
</UserControl>
