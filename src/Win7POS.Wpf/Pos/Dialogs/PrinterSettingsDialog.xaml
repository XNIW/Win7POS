<Window x:Class="Win7POS.Wpf.Pos.Dialogs.PrinterSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Printer settings"
        Width="560"
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Printer name:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="8,0,0,0" Text="{Binding PrinterName, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="8,4,0,0" Foreground="DimGray"
                   Text="Lascia vuoto per stampante predefinita"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Copies:"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="8,8,0,0" Width="90" HorizontalAlignment="Left"
                 Text="{Binding Copies, UpdateSourceTrigger=PropertyChanged}"/>

        <CheckBox Grid.Row="3" Grid.ColumnSpan="2" Margin="0,10,0,0" Content="Auto print after sale"
                  IsChecked="{Binding AutoPrint}"/>

        <CheckBox Grid.Row="4" Grid.ColumnSpan="2" Margin="0,6,0,0" Content="Save receipt copy to file"
                  IsChecked="{Binding SaveCopyToFile}"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Output directory:"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="8,8,0,0" Text="{Binding OutputDirectory, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Margin="0,12,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button MinWidth="120" Height="36" Margin="0,0,8,0" Content="OK" Command="{Binding ConfirmCommand}"/>
            <Button MinWidth="120" Height="36" Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
