<Window x:Class="Win7POS.Wpf.Pos.Dialogs.SalesRegisterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro vendite" Width="720" Height="480"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding RecentSales}"
                  SelectedItem="{Binding SelectedRecentSale}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  Margin="0,0,0,12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vendita" Binding="{Binding SaleCode}" Width="*"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding KindText}" Width="70"/>
                <DataGridTextColumn Header="Data/ora" Binding="{Binding TimeText}" Width="140"/>
                <DataGridTextColumn Header="Totale" Binding="{Binding TotalDisplay}" Width="90"/>
                <DataGridTextColumn Header="Stato" Binding="{Binding StatusText}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Ricarica" MinWidth="90" Margin="0,0,8,0" Command="{Binding LoadRecentSalesCommand}"/>
            <Button Content="Preview / Ristampa" MinWidth="120" Margin="0,0,8,0" Command="{Binding ReprintPreviewCommand}"/>
            <Button Content="Stampa selezionato" MinWidth="120" Margin="0,0,8,0" Command="{Binding PrintSelectedReceiptCommand}"/>
            <Button Content="Reso / Storno" MinWidth="110" Command="{Binding RefundCommand}"/>
        </StackPanel>
    </Grid>
</Window>
