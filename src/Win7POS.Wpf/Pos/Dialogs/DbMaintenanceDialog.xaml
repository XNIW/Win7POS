<Window x:Class="Win7POS.Wpf.Pos.Dialogs.DbMaintenanceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestione DB / Manutenzione"
        Width="760"
        Height="460"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="DB Path:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="8,0,0,0" IsReadOnly="True" Text="{Binding DbPath}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,6,0,0" VerticalAlignment="Center" Text="Backups Directory:"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="8,6,0,0" IsReadOnly="True" Text="{Binding BackupsDirectory}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,6,0,0" VerticalAlignment="Center" Text="Exports Directory:"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="8,6,0,0" IsReadOnly="True" Text="{Binding ExportsDirectory}"/>

        <WrapPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="0,12,0,0">
            <Button MinWidth="120" Margin="0,0,8,8" Content="Backup Now" Command="{Binding BackupNowCommand}"/>
            <Button MinWidth="140" Margin="0,0,8,8" Content="Restore Backup..." Command="{Binding RestoreBackupCommand}"/>
            <Button MinWidth="130" Margin="0,0,8,8" Content="Integrity Check" Command="{Binding IntegrityCheckCommand}"/>
            <Button MinWidth="110" Margin="0,0,8,8" Content="VACUUM" Command="{Binding VacuumCommand}"/>
            <Button MinWidth="120" Margin="0,0,8,8" Content="Open Folder" Command="{Binding OpenFolderCommand}"/>
        </WrapPanel>

        <TextBlock Grid.Row="4" Grid.ColumnSpan="2" Margin="0,4,0,0" Foreground="DimGray"
                   Text="Output / risultati:"/>
        <TextBox Grid.Row="5" Grid.ColumnSpan="2" Margin="0,6,0,0"
                 Text="{Binding OutputLog}"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button MinWidth="110" Height="34" Content="Chiudi" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
