<Window x:Class="Win7POS.Wpf.Pos.Dialogs.AddProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuovo prodotto"
        Width="430"
        Height="250"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Barcode:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="8,0,0,0" IsReadOnly="True" Text="{Binding Barcode}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Nome:"/>
        <TextBox x:Name="NameBox" Grid.Row="1" Grid.Column="1" Margin="8,8,0,0" Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Prezzo:"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="8,8,0,0" Text="{Binding PriceText, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Margin="0,10,0,0" Foreground="DimGray"
                   Text="Prezzo in formato decimale (es. 12,50 o 12.50)."/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="0,12,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button MinWidth="120" Height="36" Margin="0,0,8,0" Content="Salva" Command="{Binding ConfirmCommand}"/>
            <Button MinWidth="120" Height="36" Content="Annulla" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
