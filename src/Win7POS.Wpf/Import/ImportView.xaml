<UserControl x:Class="Win7POS.Wpf.Import.ImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             AllowDrop="True"
             Drop="OnRootDrop"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1100">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- File picker -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="CSV:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Grid.Column="1" Text="{Binding CsvPath, UpdateSourceTrigger=PropertyChanged}" MinHeight="28"/>
            <Button Grid.Column="2" Content="Browse..." Margin="8,0,0,0" MinWidth="90"
                    Command="{Binding BrowseCommand}"/>
        </Grid>

        <!-- Options -->
        <WrapPanel Grid.Row="1" Margin="0,0,0,8">
            <CheckBox Content="InsertNew" IsChecked="{Binding InsertNew}" Margin="0,0,16,0"/>
            <CheckBox Content="UpdatePrice" IsChecked="{Binding UpdatePrice}" Margin="0,0,16,0"/>
            <CheckBox Content="UpdateName" IsChecked="{Binding UpdateName}" Margin="0,0,16,0"/>
            <CheckBox Content="DryRun" IsChecked="{Binding DryRun}" Margin="0,0,16,0"/>
            <TextBlock VerticalAlignment="Center" Foreground="DimGray"
                       Text="{Binding ApplyModeText}"/>
        </WrapPanel>

        <!-- Actions + progress -->
        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Analyze" MinWidth="110" MinHeight="30"
                    Command="{Binding AnalyzeCommand}"/>
            <Button Grid.Column="1" Content="Apply" Margin="8,0,0,0" MinWidth="110" MinHeight="30"
                    Command="{Binding ApplyCommand}"/>

            <ProgressBar Grid.Column="3" Height="16" VerticalAlignment="Center"
                         IsIndeterminate="True">
                <ProgressBar.Style>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ProgressBar.Style>
            </ProgressBar>

            <TextBlock Grid.Column="5" VerticalAlignment="Center" Text="{Binding Status}" TextTrimming="CharacterEllipsis"/>
        </Grid>

        <!-- Summary -->
        <GroupBox Grid.Row="3" Header="Summary" Margin="0,0,0,8">
            <TextBox Text="{Binding Summary}" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </GroupBox>

        <!-- Preview -->
        <GroupBox Grid.Row="4" Header="Preview">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="0,0,0,6" Foreground="Gray"
                           Text="{Binding DiffItems.Count, StringFormat=Items count: {0}}"/>
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding DiffItems}"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="All"/>
            </Grid>
        </GroupBox>

        <!-- Hint -->
        <StackPanel Grid.Row="5" Margin="0,8,0,0">
            <TextBlock Foreground="Gray" Text="{Binding DbPath, StringFormat=DB: {0}}"/>
            <TextBlock Foreground="Gray"
                       Text="Analyze/Apply usa la stessa pipeline del CLI (Core + Data adapter), senza passare dalla CLI."/>
        </StackPanel>
    </Grid>
</UserControl>
